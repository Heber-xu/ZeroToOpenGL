<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroCamera"
            android:text="ToZeroCamera" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroCameraCapture"
            android:text="ToZeroCameraCapture" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroCameraCaptureFilter"
            android:text="ToZeroCameraCaptureFilter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroVideoCaptureFilter"
            android:text="ToZeroVideoCaptureFilter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroDoubleInput"
            android:text="ToZeroDoubleInput" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ToZeroDoubleInput2"
            android:text="ToZeroDoubleInput2" />

    </LinearLayout>

</ScrollView>